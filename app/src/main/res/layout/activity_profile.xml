<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Authentications.ProfileActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EFEF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/coverpic"
                        android:layout_width="fill_parent"
                        android:layout_height="195dp"
                        tools:ignore="MissingConstraints"
                        android:adjustViewBounds="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentEnd="true"
                        android:scaleType="centerCrop"
                        />

                    <ImageView
                        android:id="@+id/coverpicbg"
                        android:layout_width="match_parent"
                        android:layout_height="195dp"
                        android:background="@drawable/back6"
                        tools:ignore="MissingConstraints"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitXY"
                        />


                    <ImageButton
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="30dp"
                        android:layout_width="25dp"
                        android:src="@drawable/moreicon"
                        android:id="@+id/more_icon"
                        android:background="@drawable/pcp"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:onClick="Signout"/>



                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circle"
                        android:layout_width="128dp"
                        android:layout_height="108dp"
                        android:src="@drawable/profile_img"
                        app:civ_border_color="#DADADA"
                        app:civ_border_width="2dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="130dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginStart="50dp"
                        />

                    <ImageView
                        android:id="@+id/circle_camera"
                        android:layout_width="@dimen/margin_20_dp"
                        android:layout_height="@dimen/margin_20_dp"
                        android:src="@drawable/add_icon"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="210dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginStart="140dp"
                        />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="206dp"
                        android:layout_height="40dp"
                        android:text="Add or edit biodata form"
                        android:textColor="@color/gray"
                        android:textSize="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_alignTop="@+id/circle"
                        android:textAlignment="viewStart"
                        android:padding="@dimen/margin_10_dp"
                        android:drawableEnd="@drawable/biodata"
                        android:background="@drawable/border_white"
                        android:layout_marginTop="130dp"/>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="70dp"
                    android:layout_marginTop="@dimen/margin_10_dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="-5dp"
                        android:background="@drawable/white_bg"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card3"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            app:cardCornerRadius="25dp"
                            app:cardMaxElevation="25dp"
                            app:cardBackgroundColor="@color/white">


                            <EditText
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="43dp"
                                android:layout_marginTop="52dp"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:layout_marginStart="45dp"
                                android:layout_marginEnd="@dimen/margin_10_dp"
                                android:background="@drawable/rounded_corner_without_underline"
                                android:editable="false"
                                android:textSize="16dp"
                                android:focusable="false"
                                android:cursorVisible="false"/>

                            <TextView
                                android:id="@+id/name_heading"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginTop="20dp"
                                android:paddingStart="@dimen/padding_50_dp"
                                android:text="Username"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/imageView12"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginTop="@dimen/margin_20_dp"
                                android:layout_marginLeft="15dp"
                                app:srcCompat="@drawable/profile" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/username_edit"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="23dp"
                                    android:layout_marginEnd="@dimen/margin_10_dp"
                                    android:layout_marginRight="@dimen/margin_10_dp"
                                    android:layout_alignParentRight="true"
                                    app:srcCompat="@drawable/edit_icon" />
                            </RelativeLayout>



                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="-5dp"
                        android:background="@drawable/white_bg"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card4"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            app:cardCornerRadius="25dp"
                            app:cardMaxElevation="25dp"
                            app:cardBackgroundColor="@color/white">


                            <EditText
                                android:id="@+id/institution"
                                android:layout_width="match_parent"
                                android:layout_height="43dp"
                                android:layout_marginTop="52dp"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:layout_marginStart="45dp"
                                android:layout_marginEnd="@dimen/margin_10_dp"
                                android:background="@drawable/rounded_corner_without_underline"
                                android:textSize="16dp"
                                android:focusable="false"
                                android:cursorVisible="false"
                                android:editable="false"
                                />

                            <TextView
                                android:id="@+id/institute_heading"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginTop="20dp"
                                android:paddingStart="@dimen/padding_50_dp"
                                android:text="Institution"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/image_institute"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginTop="@dimen/margin_20_dp"
                                android:layout_marginLeft="15dp"
                                app:srcCompat="@drawable/institute" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/institute_edit1"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="23dp"
                                    android:layout_marginEnd="@dimen/margin_10_dp"
                                    android:layout_marginRight="@dimen/margin_10_dp"
                                    android:layout_alignParentRight="true"
                                    app:srcCompat="@drawable/edit_icon" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/white_bg"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card5"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            app:cardCornerRadius="20dp"
                            app:cardMaxElevation="20dp"
                            app:cardBackgroundColor="@color/white">


                            <EditText
                                android:id="@+id/qualification"
                                android:layout_width="match_parent"
                                android:layout_height="43dp"
                                android:layout_marginTop="52dp"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:layout_marginStart="45dp"
                                android:editable="false"
                                android:layout_marginEnd="@dimen/margin_10_dp"
                                android:background="@drawable/rounded_corner_without_underline"
                                android:textSize="@dimen/text_size_16_sp"
                                android:focusable="false"
                                android:cursorVisible="false"/>

                            <TextView
                                android:id="@+id/qualify_heading"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginTop="20dp"
                                android:paddingStart="@dimen/padding_50_dp"
                                android:text="Qualification"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/qualify_img"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginTop="@dimen/margin_20_dp"
                                android:layout_marginLeft="15dp"
                                app:srcCompat="@drawable/qualification" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/qualification_edit"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="23dp"
                                    android:layout_marginEnd="@dimen/margin_10_dp"
                                    android:layout_marginRight="@dimen/margin_10_dp"
                                    android:layout_alignParentRight="true"
                                    app:srcCompat="@drawable/edit_icon" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/white_bg"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card6"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            app:cardCornerRadius="20dp"
                            app:cardMaxElevation="20dp"
                            app:cardBackgroundColor="@color/white">


                            <EditText
                                android:id="@+id/email2"
                                android:layout_width="match_parent"
                                android:layout_height="43dp"
                                android:layout_marginTop="52dp"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:layout_marginStart="45dp"
                                android:layout_marginEnd="@dimen/margin_10_dp"
                                android:textSize="@dimen/text_size_16_sp"
                                android:focusable="false"
                                android:cursorVisible="false"
                                android:editable="false"
                                android:background="@drawable/rounded_corner_without_underline"
                                />

                            <TextView
                                android:id="@+id/email_heading"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginTop="20dp"
                                android:paddingStart="@dimen/padding_50_dp"
                                android:text="E-mail"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/image_email"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginTop="@dimen/margin_20_dp"
                                android:layout_marginLeft="15dp"
                                app:srcCompat="@drawable/mail" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/mail_edit"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="23dp"
                                    android:layout_marginEnd="@dimen/margin_10_dp"
                                    android:layout_marginRight="@dimen/margin_10_dp"
                                    android:layout_alignParentRight="true"
                                    app:srcCompat="@drawable/edit_icon" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/white_bg"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card7"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            app:cardCornerRadius="20dp"
                            app:cardMaxElevation="20dp"
                            app:cardBackgroundColor="@color/white">


                            <EditText
                                android:id="@+id/phone_number"
                                android:layout_width="match_parent"
                                android:layout_height="43dp"
                                android:layout_marginTop="52dp"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:editable="false"
                                android:layout_marginStart="45dp"
                                android:layout_marginEnd="@dimen/margin_10_dp"
                                android:background="@drawable/rounded_corner_without_underline"
                                android:textSize="@dimen/text_size_16_sp"
                                android:focusable="false"
                                android:cursorVisible="false"/>

                            <TextView
                                android:id="@+id/mobile_heading"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginTop="20dp"
                                android:paddingStart="@dimen/padding_50_dp"
                                android:text="Mobile number"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/image_mobile"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="15dp"
                                app:srcCompat="@drawable/mobile_phone" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/mobile_edit"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="23dp"
                                    android:layout_marginEnd="@dimen/margin_10_dp"
                                    android:layout_marginRight="@dimen/margin_10_dp"
                                    android:layout_alignParentRight="true"
                                    app:srcCompat="@drawable/edit_icon" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <View
                        style="@style/Divider"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navigationview"
        android:background="#FFFF"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>
</RelativeLayout>

