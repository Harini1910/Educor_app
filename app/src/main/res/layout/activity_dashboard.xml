<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    tools:context=".Authentications.Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:text="Welcome back!"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Classname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:textSize="22dp"
        android:textStyle="bold" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/user"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentRight="true"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#DADADA"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#5E5555"
                    android:layout_marginTop="5dp"
                    android:text="Key: "
                    android:textStyle="bold"
                    android:layout_below="@+id/Classname"
                    android:textSize="14dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="52dp"
                    android:layout_marginLeft="52dp"
                    android:textColor="#5E5555"
                    android:layout_marginTop="5dp"
                    android:textSize="14dp"
                    android:layout_below="@+id/Classname"
                    android:gravity="center_horizontal"/>


    <TextView
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#ffffff"
        android:background="@drawable/rounded_btn"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="45dp"
        android:text="search for classmates!"
        android:textColor="#837F7F"
        android:textAlignment="gravity"
        android:padding="9dp"
        android:textSize="18dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/btn"
        android:backgroundTint="#ffffff"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-37dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/arrow" />


    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-43dp"
        android:backgroundTint="#ffffff"
        app:srcCompat="@drawable/search" />

            </RelativeLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-20dp"
                android:columnOrderPreserved="false"
                android:rowOrderPreserved="false"
                android:rowCount="3"
                >


    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:backgroundTint="#085BBF"
        app:cardCornerRadius="30dp"
        android:layout_alignTop="@+id/btn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" >

        <ImageView
            android:id="@+id/file_button"
            android:layout_width="80dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/document" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="125dp"
            android:textColor="#F4F3F3"
            android:text="  Study materials" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:textColor="@color/white"
            android:text="Make use of notes!"
            android:textAlignment="center"
            android:textSize="12dp" />
    </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:layout_row="0"
                    android:layout_above="@+id/card2"
                    android:layout_alignTop="@+id/btn"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#FDFFFE"
                    android:id="@+id/carmeet"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/zoom_button"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/video" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="76dp"
                        android:text="Meeting"
                        android:textAlignment="center"
                        android:textColor="#3A3939"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="170dp"
                    android:layout_height="180dp"
                    android:layout_row="0"
                    android:layout_below="@+id/carmeet"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#FDFFFE"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/todo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="30dp"
                        app:srcCompat="@drawable/list" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="115dp"
                        android:text="Assignments"
                        android:textAlignment="center"
                        android:textColor="#3A3939"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="145dp"
                        android:text=" Do your work on time!"
                        android:textAlignment="center"
                        android:textSize="12dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:backgroundTint="#FDFFFE"
                    android:layout_marginTop="-75dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/event_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/calendar" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:text="Events"
            android:textAlignment="center"
            android:textColor="#3A3939"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginTop="120dp"
            android:textAlignment="center"
            android:text=" Track your daily activities!" />
    </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:id="@+id/car6"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/card3"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#FDFFFE"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/report"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/trend"/>

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="90dp"
                        android:text="Report"
                        android:textAlignment="center"
                        android:textColor="#3A3939"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        android:text="Analyse yourself!"
                        android:textAlignment="center"
                        android:textSize="12dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
        android:id="@+id/card5"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_below="@+id/card2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-105dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#FDFFFE"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/pdf_scanner"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/printer" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:text="Scanner"
            android:textAlignment="center"
            android:textColor="#3A3939"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Make a pdf!"
            android:textAlignment="center"
            android:textSize="14dp" />
    </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/card9"
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:layout_row="0"
                    android:layout_below="@+id/card5"
                    android:background="@color/grey_200"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/grey_200"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    >

                </TextView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card6"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_below="@+id/card5"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-100dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#FDFFFE"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/quiz_button"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="3dp"
                        app:srcCompat="@drawable/question" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp"
                        android:text="Quiz"
                        android:textAlignment="center"
                        android:textColor="#3A3939"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navigationview"
        android:background="#FFFF"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

</RelativeLayout>

